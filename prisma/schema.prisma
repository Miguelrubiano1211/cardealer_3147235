generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


//Modelos del proyecto

model students{

  id_students Int @id @default(autoincrement())
  name_students String 
  instructores instructor[]

}


model instructor{

  id Int @id @default(autoincrement())
  plate String 
  realse_date DateTime 
  is_available Boolean @default(true)
  price Decimal 
  student_id Int
  student students @relation(fields: [student_id] , references: [id_students])




}



model estado{
id Int @id @default(autoincrement())
estado String
usuario usuario[]



}




model usuario{
  id Int @id @default(autoincrement())
  username String  @unique
  password String 
  estado_id Int @default(1)
  estado estado @relation(fields:[estado_id],references: [id])

}